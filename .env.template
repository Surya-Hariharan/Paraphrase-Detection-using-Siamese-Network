# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API KEYS (for Agentic Evaluation)
# -----------------------------------------------------------------------------

# Google Gemini API Key (RECOMMENDED - FREE)
# Get your free API key from: https://aistudio.google.com/app/apikey
# Free tier: 60 requests/minute, 1500 requests/day, no credit card required
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API Key (Alternative - FREE)
# Get your free API key from: https://console.groq.com/keys
# Free tier: 30 requests/minute
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Key (optional, if using OpenAI for agents)
# OPENAI_API_KEY=your_openai_api_key_here

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------

# SBERT Model Name (default: all-MiniLM-L6-v2)
SBERT_MODEL_NAME=all-MiniLM-L6-v2

# Projection dimension
PROJECTION_DIM=256

# Similarity threshold (0.0 - 1.0)
SIMILARITY_THRESHOLD=0.75

# -----------------------------------------------------------------------------
# Document Processing
# -----------------------------------------------------------------------------

# Chunk size for document splitting (characters)
CHUNK_SIZE=1000

# Chunk overlap (characters)
CHUNK_OVERLAP=200

# Aggregation method (mean, max, weighted)
AGGREGATION_METHOD=mean

# -----------------------------------------------------------------------------
# Training Configuration
# -----------------------------------------------------------------------------

# Number of training epochs
EPOCHS=10

# Batch size
BATCH_SIZE=32

# Learning rate
LEARNING_RATE=0.0001

# Device (cuda, cpu, mps)
DEVICE=cuda

# Freeze SBERT encoder (true/false)
FREEZE_SBERT=true

# Unfreeze last SBERT layer (true/false)
UNFREEZE_LAST_LAYER=false

# -----------------------------------------------------------------------------
# Paths
# -----------------------------------------------------------------------------

# Data directory
DATA_DIR=data

# Models directory
MODELS_DIR=models

# Checkpoints directory
CHECKPOINTS_DIR=checkpoints

# Logs directory
LOGS_DIR=logs

# -----------------------------------------------------------------------------
# API Configuration (if deploying as API)
# -----------------------------------------------------------------------------

# API Host
API_HOST=0.0.0.0

# API Port
API_PORT=8000

# API Workers (for production)
API_WORKERS=4

# Enable CORS (true/false)
ENABLE_CORS=true

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Database (optional, for storing comparison history)
# -----------------------------------------------------------------------------

# DATABASE_URL=postgresql://user:password@localhost:5432/paraphrase_db
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable telemetry (true/false)
ENABLE_TELEMETRY=false

# Sentry DSN (for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# -----------------------------------------------------------------------------
# Production Settings
# -----------------------------------------------------------------------------

# Environment (development, staging, production)
ENVIRONMENT=development

# Secret key for session management
SECRET_KEY=change_this_to_a_random_secret_key_in_production

# Enable debug mode (true/false) - ALWAYS false in production
DEBUG=true

# Max upload file size (MB)
MAX_UPLOAD_SIZE_MB=10
