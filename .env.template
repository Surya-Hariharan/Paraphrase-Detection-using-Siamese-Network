# =============================================================================
# PARAPHRASE DETECTION - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's in .gitignore)

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Path to trained model checkpoint
MODEL_PATH=checkpoints/best_model.pt

# SBERT model to use (default: all-MiniLM-L6-v2)
SBERT_MODEL=all-MiniLM-L6-v2

# Projection dimension (must match training)
PROJECTION_DIM=256

# Default similarity threshold (overridden by model's optimal threshold)
DEFAULT_THRESHOLD=0.75

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================

# Training data path
TRAIN_DATA_PATH=data/quora_siamese_train.csv

# Checkpoint directory
CHECKPOINT_DIR=checkpoints

# Training hyperparameters
BATCH_SIZE=32
LEARNING_RATE=2e-4
NUM_EPOCHS=20
WEIGHT_DECAY=1e-4

# SBERT fine-tuning (set to true for maximum accuracy)
UNFREEZE_ALL_SBERT=true
FREEZE_SBERT=false

# Mixed precision training (AMP)
USE_AMP=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend.vercel.app

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=production

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API endpoint (used by frontend)
REACT_APP_API_URL=http://localhost:8000

# Production API URL
REACT_APP_PROD_API_URL=https://your-api.render.com

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker image tag
DOCKER_IMAGE_TAG=latest

# Docker container name
DOCKER_CONTAINER_NAME=paraphrase-detection

# =============================================================================
# CLOUD DEPLOYMENT
# =============================================================================

# Vercel project settings
VERCEL_PROJECT_NAME=paraphrase-detection-frontend
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# Render service settings
RENDER_SERVICE_NAME=paraphrase-api
RENDER_REGION=oregon

# =============================================================================
# SECURITY
# =============================================================================

# API key for authentication (optional but recommended)
# API_KEY=your-secret-api-key

# JWT secret (for advanced authentication)
# JWT_SECRET=your-jwt-secret
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION=3600

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# GPU settings
CUDA_VISIBLE_DEVICES=0
TORCH_NUM_THREADS=4

# Batch processing limits
MAX_BATCH_SIZE=32
MAX_TEXT_LENGTH=512

# Caching
ENABLE_MODEL_CACHE=true
CACHE_SIZE=1000


# Sentry DSN (for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# -----------------------------------------------------------------------------
# Production Settings
# -----------------------------------------------------------------------------

# Environment (development, staging, production)
ENVIRONMENT=development

# Secret key for session management
SECRET_KEY=change_this_to_a_random_secret_key_in_production

# Enable debug mode (true/false) - ALWAYS false in production
DEBUG=true

# Max upload file size (MB)
MAX_UPLOAD_SIZE_MB=10
