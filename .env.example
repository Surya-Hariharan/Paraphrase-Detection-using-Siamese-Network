# ================================
# ParaCheck AI - Configuration
# ================================

# Application Settings
APP_NAME=ParaCheck AI
APP_VERSION=2.0.0
HOST=127.0.0.1
PORT=8000
DEBUG=False
ENVIRONMENT=production  # development, staging, production

# ================================
# Security (REQUIRED - CHANGE IN PRODUCTION)
# ================================
SECRET_KEY=change-this-secret-key-in-production-use-openssl-rand-hex-64
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# ================================
# Multi-Agent AI (OPTIONAL)
# ================================
# Get your Gemini API key from: https://ai.google.dev/
# If not set, system works without agent validation
GEMINI_API_KEY=
GROQ_API_KEY=

# ================================
# Model Configuration
# ================================
ENCODER_NAME=all-MiniLM-L6-v2
EMBEDDING_DIM=384
PROJECTION_DIM=256
SIMILARITY_THRESHOLD=0.65
DEVICE=cuda
MODEL_PATH=./checkpoints/siamese_model.pth

# Threshold Guide:
# - 0.75: Conservative (fewer false positives, may miss edge cases)
# - 0.65: Balanced (recommended default)
# - 0.55: Aggressive (catches more paraphrases, more false positives)

# ================================
# Performance Optimization
# ================================
CACHE_SIZE=10000
USE_GPU=true

# ================================
# Database Configuration
# ================================
DB_TYPE=sqlite
DB_NAME=paraphrase_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=

# For PostgreSQL (production recommended):
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=paracheck
# DB_USER=postgres
# DB_PASSWORD=your-secure-password

# ================================
# DDoS Protection
# ================================
DDOS_MAX_REQUESTS_PER_MINUTE=60
DDOS_BAN_DURATION_MINUTES=15

# ================================
# API Keys (Optional)
# ================================
API_KEY_ENABLED=false

# ================================
# Logging
# ================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/paracheck.log

# ================================
# CORS Settings
# ================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# ================================
# Training Configuration (for model training)
# ================================
TRAIN_DATA_PATH=./data/train.csv
TRAIN_BATCH_SIZE=32
TRAIN_LEARNING_RATE=5e-5
TRAIN_NUM_EPOCHS=20
TRAIN_VAL_SPLIT=0.05
FREEZE_ENCODER=false
DATA_PATH=data/quora_siamese_train.csv
BATCH_SIZE=32
LEARNING_RATE=0.0001
NUM_EPOCHS=30
MIN_EPOCHS=10
EARLY_STOPPING_PATIENCE=5
SAVE_EVERY_N_EPOCHS=5
CHECKPOINT_DIR=checkpoints

# ================================
# Frontend Configuration
# ================================
FRONTEND_URL=http://localhost:5173
