{
  "version": 2,
  "name": "paraphrase-detection-api",
  "builds": [
    {
      "src": "backend/api.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/api.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "LOG_LEVEL": "INFO"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.10"
    }
  },
  "functions": {
    "backend/api.py": {
      "memory": 3008,
      "maxDuration": 60
    }
  }
}
